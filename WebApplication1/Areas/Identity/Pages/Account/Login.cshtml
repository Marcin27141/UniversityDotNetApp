@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="top-login-container" id="top-login-container">
    <div class="slide-container">
        <div class="form-container sign-in-container">
            <form id ="account" method="post">
                <h1>Good to see you!</h1>
                <p>Sign in to continue your work.</p>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Input.Email" placeholder="Email" autocomplete="username" aria-required="true">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Password" placeholder="Password" autocomplete="current-password" aria-required="true">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <button id="login-submit" type="submit">Sign in</button>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">Remember me?</label>
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                </div>
                <a href="#" id="forgot-password-href">Forgot your password?</a>
            </form>
        </div>
        <div class="form-container password-forgot-container">
            <form>
                <h1>Enter Your email below</h1>
                <p>We will send You a reset link</p>
                <input type="email" placeholder="Email">
                <div class="horizontal-buttons">
                    <button id="back-button">Back</button>
                    <button id="send-button">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/js/login.js"></script>
}

