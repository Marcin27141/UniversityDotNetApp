@page "{id}"
@model WebApplication1.Pages.EditElement.EditCourseModel
@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Edit Course";
}

<div class="form-group">
    <label asp-for="Course.Name"></label>
    <input class="form-control" asp-for="Course.Name" />
    <span asp-validation-for="Course.Name"></span>
</div>
<div>
    <label asp-for="Course.CourseCode"></label>
    <div>
        @Html.TextBoxFor(m => m.Course.CourseCode, new { @readonly = "readonly" })
    </div>
</div>
<br />
<div class="form-group">
    <div>
        @Html.DropDownListFor(model => model.ProfessorId, Model.CreatedProfessors, "choose professor")
    </div>
    <a asp-page="/NewElement/NewPerson/NewProfessor">create a new professor</a>
</div>
<div class="form-group">
    <label asp-for="Course.ECTS"></label>
    <input class="form-control" asp-for="Course.ECTS" />
    <span asp-validation-for="Course.ECTS"></span>
</div>
<div class="form-group">
    <label asp-for="Course.IsFinishedWithExam"></label>
    <input class="form-control" asp-for="Course.IsFinishedWithExam" />
    <span asp-validation-for="Course.IsFinishedWithExam"></span>
</div>