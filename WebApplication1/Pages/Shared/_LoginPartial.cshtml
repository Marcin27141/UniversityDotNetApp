@using Microsoft.AspNetCore.Identity
@inject WebApplication1.Contracts.IUserRepository _userRepository

<ul class="navbar-nav">
    @if (_userRepository.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link say-hello" asp-area="Identity"
               asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  asp-area="Identity" method="post">
                <button class="nav-link btn btn-link text-dark"
                        type="submit">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity"
               asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
