@model IEnumerable<Services.Course>
@using WebApplication1.HtmlHelpers
@{
}

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Code
        </th>
        <th></th>
    </tr>



    @foreach (var course in Model)
    {
        <tr>
            <td>
                @course.Name
            </td>
            <td>
                @course.CourseCode
            </td>
            <td>
                <a asp-page="/EditElement/EditCourse" asp-route-courseCode="@course.CourseCode">Edit</a> |
                <a asp-page="/ShowResults/ShowCourse" asp-route-courseCode="@course.CourseCode">Details</a> |
                <a asp-page="/ShowResults/ShowCourses" asp-page-handler="delete" asp-route-courseCode="@course.CourseCode">Delete</a>
            </td>
        </tr>
    }
</table>