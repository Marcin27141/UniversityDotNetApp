@page
@model WebApplication1.Pages.NewStudentModel
@{
    Layout = "_FormLayout";
    ViewData["Title"] = "New Student";
}

<div class="form-group">
    <div>
        @Html.DropDownListFor(model => model.ApplicationUserId, Model.ApplicationUsers, "choose account")
    </div>
    <span asp-validation-for="ApplicationUserId"></span>
</div>

@await Html.PartialAsync("_PersonalDataPartial", Model.PersonalData) 

<div class="form-group">
    <label asp-for="Student.Index"></label>
    <input class="form-control" asp-for="Student.Index" />
    <span asp-validation-for="Student.Index"></span>
</div>
<div class="form-group">
    <div>
        <select asp-for="SelectedCourses" asp-items="Model.AvailableCourses">
            <option value="" disabled>Choose courses</option>
        </select>
    </div>
    <a asp-page="/NewElement/NewCourse">create a new course</a>
</div>
<div class="form-group">
    <label asp-for="Student.BeginningOfStudying"></label>
    <input class="form-control" type="date" asp-for="Student.BeginningOfStudying" />
    <span asp-validation-for="Student.BeginningOfStudying"></span>
</div>
<div class="form-group">
    <label asp-for="Student.Average"></label>
    <input class="form-control" asp-for="Student.Average" />
    <span asp-validation-for="Student.Average"></span>
</div>
