@page "{gradeId}"
@model WebApplication1.Pages.Grades.EditGradeModel
@{
    Layout = "_FormLayout";
    ViewData["Title"] = "Edit Grade";
}

<input type="hidden" asp-for="Grade.GradeId" />
<input type="hidden" asp-for="Grade.CourseId" />

<div class="form-group">
    <label asp-for="Student.PersonalData.FirstName"></label>
    <div>
        @Html.TextBoxFor(m => m.Student.PersonalData.FirstName, new { @readonly = "readonly" })
    </div>
</div>
<div class="form-group">
    <label asp-for="Student.PersonalData.LastName"></label>
    <div>
        @Html.TextBoxFor(m => m.Student.PersonalData.LastName, new { @readonly = "readonly" })
    </div>
</div>
<div class="form-group">
    <label asp-for="Student.Index"></label>
    <div>
        @Html.TextBoxFor(m => m.Student.Index, new { @readonly = "readonly" })
    </div>
</div>
<br />
<div class="form-group">
    <label asp-for="Grade.GradeValue">Grade</label>
    <input class="form-control" asp-for="Grade.GradeValue" />
    <span asp-validation-for="Grade.GradeValue"></span>
</div>
