@page
@model WebApplication1.Pages.ShowResults.ShowCoursesModel
@{
    ViewData["Title"] = "Courses";
}

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Code
        </th>
        <th></th>
    </tr>



    @foreach (var course in Model.CreatedCourses)
    {
        <tr>
            <td>
                @course.Name
            </td>
            <td>
                @course.CourseCode
            </td>
            <td>
                <a asp-page="/EditElement/EditCourse" asp-route-id="@course.EntityCourseID">Edit</a> |
                <a asp-page="/ShowResults/ShowCourse" asp-route-id="@course.EntityCourseID">Details</a> |
                <a asp-page="/ShowResults/ShowCourses" asp-page-handler="delete" asp-route-id="@course.EntityCourseID">Delete</a>
            </td>
        </tr>
    }
</table>