@page "{id}"
@model WebApplication1.Pages.ShowResults.ShowStudentModel
@{
    ViewData["Title"] = "Student";
}

@section styles{
    <link rel="Stylesheet" href="~/css/singleResult.css" />
}

<div class="single-result">
    <h1>@Model.StudentToShow.PersonalData.FirstName @Model.StudentToShow.PersonalData.LastName</h1>
    <div class="key-value-result">
        <h2>First name</h2>
        <h4>@Model.StudentToShow.PersonalData.FirstName</h4>
    </div>
    <div class="key-value-result">
        <h2>Last name</h2>
        <h4>@Model.StudentToShow.PersonalData.LastName</h4>
    </div>
    <div class="key-value-result">
        <h2>PESEL</h2>
        <h4>@Model.StudentToShow.PersonalData.PESEL</h4>
    </div>
    <div class="key-value-result">
        <h2>Birthday</h2>
        <h4>@Model.StudentToShow.PersonalData.Birthday.ToShortDateString()</h4>
    </div>
    <div class="key-value-result">
        <h2>Motherland</h2>
        <h4>@Model.StudentToShow.PersonalData.Motherland</h4>
    </div>
    <div class="key-value-result">
        <h2>Index</h2>
        <h4>@Model.StudentToShow.Index</h4>
    </div>
    <div class="key-value-result">
        <h2>Beginning of studies</h2>
        <h4>@Model.StudentToShow.BeginningOfStudying.ToShortDateString()</h4>
    </div>
    <div class="key-table-result">
        <h2>Student's courses (number of courses: @Model.StudentToShow.Courses.Count())</h2>
        <div class="table-container">
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Code
                    </th>
                    <th></th>
                </tr>



                @foreach (var course in Model.StudentToShow.Courses)
                {
                    <tr>
                        <td>
                            @course.Name
                        </td>
                        <td>
                            @course.CourseCode
                        </td>
                        <td>
                            <a asp-page="/ShowResults/ShowCourse" asp-route-id="@course.EntityCourseID">Details</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        
    </div>
</div>
